<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pulkit.demo_app_color_change.com.demoappcolorchange.activities.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Main Screen"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ffffff" />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/im_green"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/green_round_background" />

    <ImageView
        android:id="@+id/iv_pink"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/toolbar"
        android:layout_toRightOf="@+id/im_green"
        android:src="@drawable/pink_round_background" />

    <ImageView
        android:id="@+id/iv_red"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/toolbar"
        android:layout_toRightOf="@+id/iv_pink"
        android:src="@drawable/red_round_background" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_pink"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="20dp"
        android:text="My New Color"
        android:textAppearance="?android:textAppearanceLarge" />

</RelativeLayout>
